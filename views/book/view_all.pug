extends ../layout

block content
    h3 Books
    a(href= '/books/add') Add New Book
    table
        thead
            tr
                th Title
                th Author
                th publisher
                th genre
                th Page Number
                th Cover
                th Description
                th
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.author
                    td= book.publisher
                    td= book.genre
                    td= book.pg_number
                    td
                     img.image(src= book.image)
                    td= book.description
                    td
                        a(href= `/books/profile/${book.id}`) View Profile